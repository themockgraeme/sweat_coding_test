<resources xmlns:tools="http://schemas.android.com/tools">

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="HeaderBar">
		<item name="android:background">@android:color/white</item>
		<item name="android:contentInsetStart" tools:targetApi="lollipop">0dp</item>
		<item name="android:contentInsetEnd" tools:targetApi="lollipop">0dp</item>
	</style>

	<style name="RatingBar" parent="Theme.AppCompat">
		<item name="colorControlNormal">@color/colorAccent</item>
		<item name="colorControlActivated">@color/colorAccent</item>
		<item name="android:progressDrawable">@drawable/sweat_drop_indicator</item>
		<item name="android:numStars">5</item>
	</style>

	<style name="HorizontalProgressBar" parent="android:Widget.ProgressBar.Horizontal">

	</style>
</resources>
